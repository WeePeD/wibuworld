    <div class="container">
        <div class="v4_722 ">

            <div>
                <p class="text-type">HOT DEALS</p>
            </div>
            <div class="slideshow-container">
                <slider>
                </slider>
            </div>

            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>

            <br>

            <div style="text-align:center; margin-top: 10px;">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
                <span class="dot" onclick="currentSlide(4)"></span>
                <span class="dot" onclick="currentSlide(5)"></span>

            </div>
        </div>
        <div class="product-plate">
            
                <p class="text-type">RECOMMEND Manga</p>
                <div class="product-list">
                    <% productlist.forEach(product =>{ %>
                        <% if (product.productType == "Manga"){ %>
                            <form action="DetailController" method="get">
                                <input type="hidden" name="action" value="detail">
                                <input type="hidden" name="product_id" value="${animeproduct.getID()}">
                                <button type="submit"   style="background-color: transparent; border: none; ">
                                    <div id="1" class="product-component">
                                        <img class="poster"  src="../poster/<%= product.productImg%>" type="submit" alt="<%= product.productName%>">
                                        
                                        <div class="text-title" type="submit"><%= product.productName %></div>
                                        <div class="cost text-title"><%= product.productPrice %></div>
                                    </div>
                                </button>
                            </form>
                    <% }}) %>
                </div>

            
                <p class="text-type">HOT Anime</p>
                <div class="product-list">
                    <% productlist.forEach(product =>{ %>
                        <% if (product.productType == "Anime"){ %>
